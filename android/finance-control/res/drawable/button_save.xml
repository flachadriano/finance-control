<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <gradient
                android:startColor="@color/light_green"
                android:endColor="@color/green"
                android:angle="270" />
            <stroke
                android:width="3dp"
                android:color="@color/green" />
            <corners
                android:radius="5dp" />
        </shape>
    </item>

    <item>        
        <shape>
            <gradient
                android:startColor="@color/green"
                android:endColor="@color/dark_green"
                android:angle="270" />
            <stroke
                android:width="3dp"
                android:color="@color/green" />
            <corners
                android:radius="5dp" />
            <padding
                android:top="10dp"
                android:bottom="10dp"
                android:right="10dp"
                android:left="10dp" />
        </shape>
    </item>

</selector>
