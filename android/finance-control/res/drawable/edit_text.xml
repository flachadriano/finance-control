<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <gradient
                android:startColor="@color/grey"
                android:endColor="@color/white"
                android:angle="270" />
            <stroke
                android:width="3dp"
                android:color="@color/light_green" />
            <corners
                android:radius="5dp" />
        </shape>
    </item>

    <item android:state_focused="true" >
        <shape>
            <gradient
                android:startColor="@color/grey"
                android:endColor="@color/white"
                android:angle="270" />
            <stroke
                android:width="3dp"
                android:color="@color/light_green" />
            <corners
                android:radius="5dp" />
        </shape>
    </item>

    <item>        
        <shape>
            <gradient
                android:startColor="@color/grey"
                android:endColor="@color/white"
                android:angle="270" />
            <corners
                android:radius="5dp" />
            <padding
                android:top="7dp"
                android:bottom="7dp"
                android:left="10dp"
                android:right="10dp" />
        </shape>
    </item>

</selector>
